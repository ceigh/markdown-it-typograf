{
  "name": "markdown-it-typograf",
  "module": "index.js",
  "scripts": {
    "set:hooks": "bunx simple-git-hooks",
    "dev": "bun test --watch",
    "format": "bun prettier . --write",
    "typecheck": "bun tsc",
    "test": "bun test --bail"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx nano-staged",
    "pre-push": "bun run typecheck && bun run test"
  },
  "nano-staged": {
    "*.{js,json,md}": "bun prettier --write"
  },
  "dependencies": {
    "typograf": "^7.4.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/markdown-it": "^14.1.1",
    "markdown-it": "^14.1.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "prettier": {},
  "type": "module",
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "typograf"
  ]
}
