{
  "name": "markdown-it-typograf",
  "module": "index.js",
  "dependencies": {
    "typograf": "^7.4.1"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.1",
    "prettier": "^3.3.2"
  },
  "nano-staged": {
    "*.{js,json,md}": "bun --bun prettier --write"
  },
  "prettier": {},
  "scripts": {
    "postinstall": "bunx --bun simple-git-hooks",
    "format": "bun --bun prettier . --write"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx --bun nano-staged"
  },
  "type": "module"
}
