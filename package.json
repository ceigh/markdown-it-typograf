{
  "name": "markdown-it-typograf",
  "module": "index.js",
  "dependencies": {
    "typograf": "^7.4.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/markdown-it": "^14.1.1",
    "markdown-it": "^14.1.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "nano-staged": {
    "*.{js,json,md}": "bun --bun prettier --write"
  },
  "prettier": {},
  "scripts": {
    "postinstall": "bunx --bun simple-git-hooks",
    "format": "bun --bun prettier . --write",
    "typecheck": "bun --bun tsc",
    "test": "bun test --bail"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx --bun nano-staged",
    "pre-push": "bun run typecheck && bun run test"
  },
  "type": "module"
}
